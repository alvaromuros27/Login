<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resultado2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD495"
    tools:context=".ListFragmentActivity">


    <ListView
        android:id="@+id/superListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomAppBar"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/list_item" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="5dp"
        android:background="#FFD495"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/atras"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#D7E9B9"
                android:text="ANTERIOR"
                android:textColor="#8E2302"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/PAGINA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textIsSelectable="false"
            android:background="#FFFBAC"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textStyle="bold" />

            <Button
                android:id="@+id/alante"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#D7E9B9"
                android:text="SIGUIENTE"
                android:textColor="#8E2302"
                android:textStyle="bold" />

        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>